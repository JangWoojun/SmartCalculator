<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_margin="40sp"
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:gravity="top|right"
        android:text="@string/num"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--       출처표시 <a href="https://www.flaticon.com/kr/free-icons/-" title="사용자 인터페이스 아이콘">사용자 인터페이스 아이콘  제작자: Rizki Ahmad Fauzi - Flaticon</a>-->


    <ImageView
        android:id="@+id/btnX"
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:layout_marginRight="25sp"
        android:src="@drawable/x"
        android:layout_marginBottom="250sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_marginRight="20sp"
        android:layout_marginLeft="20sp"
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="@color/gray"
        android:layout_marginBottom="160sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical" />

    <LinearLayout
        android:gravity="center"
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginBottom="350sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:textAllCaps="false"
            android:id="@+id/btnInch"
            android:layout_width="75sp"
            android:layout_height="75sp"
            android:layout_margin="8sp"
            android:background="@drawable/radius"
            android:text="@string/ic"
            android:textSize="15sp"
            tools:ignore="NestedWeights,UsingOnClickInXml" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAcreage"
            android:layout_width="75sp"
            android:layout_height="75sp"
            android:layout_margin="8sp"
            android:background="@drawable/radius"
            android:text="@string/pm"
            android:textSize="15sp"
            tools:ignore="UsingOnClickInXml" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnFahrenheit"
            android:layout_width="75sp"
            android:layout_height="75sp"
            android:layout_margin="8sp"
            android:background="@drawable/radius"
            android:text="@string/sh"
            android:textSize="15sp"
            tools:ignore="UsingOnClickInXml" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnObelus"
            android:layout_width="75sp"
            android:layout_height="75sp"
            android:layout_margin="8sp"
            android:background="@drawable/radius"
            android:text="@string/Obelus"
            android:textSize="25sp"
            tools:ignore="UsingOnClickInXml" />

    </LinearLayout>



    <LinearLayout
        android:gravity="center"
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginBottom="255sp"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">




        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn7"
            android:layout_width="75sp"
            android:layout_height="75sp"
            android:layout_margin="8sp"
            android:background="@drawable/radius"
            android:text="@string/_7"
            android:textSize="25sp"
            tools:ignore="NestedWeights,UsingOnClickInXml" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn8"
            android:layout_width="75sp"
            android:layout_height="75sp"
            android:layout_margin="8sp"
            android:background="@drawable/radius"
            android:text="@string/_8"
            android:textSize="25sp"
            tools:ignore="UsingOnClickInXml" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn9"
            android:layout_width="75sp"
            android:layout_height="75sp"
            android:layout_margin="8sp"
            android:background="@drawable/radius"
            android:text="@string/_9"
            android:textSize="25sp"
            tools:ignore="UsingOnClickInXml" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnTimes"
            android:layout_width="75sp"
            android:layout_height="75sp"
            android:layout_margin="8sp"
            android:background="@drawable/radius"
            android:text="@string/Times"
            android:textSize="25sp"
            tools:ignore="UsingOnClickInXml" />


    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:id="@+id/linearLayout7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="170sp"
        android:layout_weight="1"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn4"
            android:layout_width="75sp"
            android:layout_height="75sp"
            android:layout_margin="8sp"
            android:background="@drawable/radius"
            android:text="@string/_4"
            android:textSize="25sp"
            tools:ignore="NestedWeights,UsingOnClickInXml" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn5"
            android:layout_width="75sp"
            android:layout_height="75sp"
            android:layout_margin="8sp"
            android:background="@drawable/radius"
            android:text="@string/_5"
            android:textSize="25sp"
            tools:ignore="UsingOnClickInXml" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn6"
            android:layout_width="75sp"
            android:layout_height="75sp"
            android:layout_margin="8sp"
            android:background="@drawable/radius"
            android:text="@string/_6"
            android:textSize="25sp"
            tools:ignore="UsingOnClickInXml" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnMinus"
            android:layout_width="75sp"
            android:layout_height="75sp"
            android:layout_margin="8sp"
            android:background="@drawable/radius"
            android:text="@string/minus"
            android:textSize="25sp"
            tools:ignore="UsingOnClickInXml" />


    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="95sp"
        android:layout_weight="1"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn1"
            android:layout_width="75sp"
            android:layout_height="75sp"
            android:layout_margin="8sp"
            android:background="@drawable/radius"
            android:text="@string/_1"
            android:textSize="25sp"
            tools:ignore="NestedWeights,UsingOnClickInXml" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn2"
            android:layout_width="75sp"
            android:layout_height="75sp"
            android:layout_margin="8sp"
            android:background="@drawable/radius"
            android:text="@string/_2"
            android:textSize="25sp"
            tools:ignore="UsingOnClickInXml" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn3"
            android:layout_width="75sp"
            android:layout_height="75sp"
            android:layout_margin="8sp"
            android:background="@drawable/radius"
            android:text="@string/_3"
            android:textSize="25sp"
            tools:ignore="UsingOnClickInXml" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnPlus"
            android:layout_width="75sp"
            android:layout_height="75sp"
            android:layout_margin="8sp"
            android:background="@drawable/radius"
            android:text="@string/plus"
            android:textSize="25sp"
            tools:ignore="UsingOnClickInXml" />


    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginBottom="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnChange"
            android:layout_width="75sp"
            android:layout_height="75sp"
            android:layout_margin="8sp"
            android:background="@drawable/radius"
            android:text="@string/c"
            android:textSize="25sp"
            tools:ignore="NestedWeights,UsingOnClickInXml" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn0"
            android:layout_width="75sp"
            android:layout_height="75sp"
            android:layout_margin="8sp"
            android:background="@drawable/radius"
            android:text="@string/_0"
            android:textSize="25sp"
            tools:ignore="UsingOnClickInXml" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnM"
            android:layout_width="75sp"
            android:layout_height="75sp"
            android:layout_margin="8sp"
            android:background="@drawable/radius"
            android:text="@string/m"
            android:textSize="25sp"
            tools:ignore="UsingOnClickInXml" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnEqual"
            android:layout_width="75sp"
            android:layout_height="75sp"
            android:layout_margin="8sp"
            android:background="@drawable/radius"
            android:text="@string/equal"
            android:textSize="25sp"
            tools:ignore="UsingOnClickInXml" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>